<p id="notice"><%= notice %></p>

<h1>Participantes</h1>

<div class="row">
  <div class="col-lg-10">
    <div class="input-group">
      <input type="text" class="form-control" placeholder="Search for...">
    </div>
  </div>
</div>
<div class="row">
	<table class="table">
	  <thead>
	    <tr>
	      <th>Nome completo</th>
	      <th>Data nascimento</th>
	      <th>Cidade</th>
	      <th>Estado</th>
	      <th>Rg</th>
	      <th>Cpf</th>
	      <th colspan="3"></th>
	    </tr>
	  </thead>

	  <tbody>
	    <% @participantes.each do |participante| %>
	      <tr>
		<td><%= participante.nome_completo %></td>
		<td><%= participante.data_nascimento %></td>
		<td><%= participante.cidade %></td>
		<td><%= participante.estado %></td>
		<td><%= participante.rg %></td>
		<td><%= participante.cpf %></td>
		<td><%= link_to 'Show', participante, class:"btn btn-default" %></td>
		<td><%= link_to 'Edit', edit_participante_path(participante), class:"btn btn-info" %></td>
		<td><%= link_to 'Destroy', participante, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>
</div>
<br>

<%= link_to 'New Participante', new_participante_path %>
